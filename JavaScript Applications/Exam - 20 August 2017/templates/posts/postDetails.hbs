{{>header}}

<div class="content">
    {{>navigation}}

    <section id="viewComments">
        <div class="post">
            <div class="col thumbnail">
                <a href="{{post.url}}">
                    <img src="{{post.imageUrl}}">
                </a>
            </div>
            <div class="post-content">
                <div class="title">
                    <a href="{{post.url}}">
                        {{post.title}}
                    </a>
                </div>
                <div class="details">
                    <p>{{post.description}}</p>
                    <div class="info">
                        submitted {{post.time}} ago by pesho
                    </div>
                    <div class="controls">
                        {{#if post.isAuthor}}
                            <ul>
                                <li class="action"><a class="editLink" href="#/editPost/{{post._id}}">edit</a></li>
                                <li class="action"><a class="deleteLink" href="#/deletePost/{{post._id}}">delete</a>
                                </li>
                            </ul>
                        {{/if}}
                    </div>

                </div>
            </div>
            <div class="clear"></div>
        </div>

        {{>createCommentForm}}

        {{#each comments}}
            {{>comment}}
        {{else}}
            <p>There are no comments of this post.</p>
        {{/each}}
    </section>
</div>

{{>footer}}

